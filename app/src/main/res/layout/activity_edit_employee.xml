<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.attendance_tracking.View.EditEmployeeActivity"
    android:fitsSystemWindows="true"
    android:id="@+id/drawerLayout_editEmployee">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_editemployee_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.EditEmployeeActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_editEmployee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_editEmployee"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="EditEmployeeActivity"/>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager_editEmployee"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appbar_editEmployee"
            app:layout_constraintBottom_toBottomOf="parent"/>
