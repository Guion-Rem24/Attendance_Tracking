<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.attendance_tracking">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Attendance_Tracking">
        <activity
            android:name=".SampleDrawerActivity"
            android:label="@string/title_activity_sample_drawer"
            android:theme="@style/Theme.Attendance_Tracking.NoActionBar"></activity>
        <!-- changed::: android:theme="@style/Theme.Attendance_Tracking" -->
        <meta-data
            android:name="com.google.android.actions"
            android:resource="@xml/preference" />

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".CalendarActivity" />
        <activity android:name=".DayClickListener" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>